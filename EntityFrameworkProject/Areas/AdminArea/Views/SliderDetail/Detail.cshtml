

@model SliderDetail
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <h2 style="text-align:center; color:blue" class="mb-5">- Slider Detail -</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Header
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        SignImage
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                       @Html.Raw(Model.Header)
                    </td>
                    <td>
                        @Model.Description
                    </td>
                    <td>
                        <img src="~/img/@Model.SignImage" alt="Image" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <a asp-controller="SliderDetail" asp-action="Index" class="btn btn-primary my-3">Back</a>

</div>

