
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        FullName
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Online/Offline
                    </th>
                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Employee employee in Model)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @employee.FullName
                        </td>
                        <td>
                            @employee.Age
                        </td>
                        <td>
                            @employee.Position
                        </td>
                        <td>
                            @if (employee.IsActive)
                            {
                                <div style="width:30px;height:30px; background-color: greenyellow;border-radius: 50%;display:inline-block;"> </div>

                            }
                            else
                            {
                                <div style="width: 30px; height: 30px; background-color: red; border-radius: 50%; display: inline-block "> </div>

                            }
                        </td>


                        <td style="text-align: center;">

                            <form style="display:inline-block" asp-action="SetStatus" asp-route-id="@employee.Id" method="post">
                                <button type="submit" class="btn btn-outline-success">On/Of</button>
                            </form>
                            <a asp-action="Detail" asp-route-id="@employee.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                            <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                            <form style="display:inline-block" asp-action="Delete" asp-route-id="@employee.Id" method="post">
                                <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                            </form>

                        </td>
                    </tr>
                    count++;
                }




            </tbody>
        </table>
    </div>
</div>
