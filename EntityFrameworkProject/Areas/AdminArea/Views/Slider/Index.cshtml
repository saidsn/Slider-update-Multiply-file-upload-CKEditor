@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-area="AdminArea" asp-controller="Slider" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="text-align:center">
                        #
                    </th>
                    <th style="text-align:center">
                        Image
                    </th>
                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td style="text-align:center">
                            @count
                        </td>
                        <td style="text-align:center">
                            <img src="~/img/@slider.Image" alt="slider" />
                        </td>
                        <td style="text-align: center;">
                            <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                            <a asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                            <form style="display:inline-block" asp-action="Delete" asp-route-id="@slider.Id" method="post">
                                <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                            </form>
                        </td>
                    </tr>
                    count++;

                }

            </tbody>
        </table>
    </div>
</div>
