

@model Employee
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row my-5">
        <span class="text-danger">@ViewBag.Message</span>
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="color:blue; text-align:center">- Update Employee -</h3>
                  
                    <form asp-controller="Employee" asp-action="Edit" class="forms-sample" method="post">
                        <div class="form-group">
                            <div>
                                <label for="exampleInputUsername1">FullName</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="FullName">
                                <span class="text-danger" asp-validation-for="FullName"></span>
                            </div>
                           
                            <div>
                                <label for="exampleInputUsername1">Age</label>
                                <input  type="text" class="form-control" asp-for="Age">
                                <span class="text-danger" asp-validation-for="Age"></span>
                            </div>
                        
                            <div>
                                <label for="exampleInputUsername1">Position</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="Position">
                                <span class="text-danger" asp-validation-for="Position"></span>
                            </div>
                      
                        </div>

                        <button type="submit" class="btn btn-primary me-2">Edit</button>
                        <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}

