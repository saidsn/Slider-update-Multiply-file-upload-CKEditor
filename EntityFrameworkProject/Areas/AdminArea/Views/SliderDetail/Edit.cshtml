

@model SliderDetail
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row my-5">
        <span class="text-danger">@ViewBag.Message</span>
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="color:blue; text-align:center">- Update SliderDetail -</h3>

                    <form asp-controller="SliderDetail" asp-action="Edit" class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div>
                                <label for="exampleInputUsername1">Header</label>
                                @*<input type="text" class="form-control" asp-for="Header">*@
                                <textarea class="form-control rounded-0" asp-for="Header" id="header-area" rows="10"></textarea>
                                <span class="text-danger" asp-validation-for="Header"></span>
                            </div>

                            <div>
                                <label for="exampleInputUsername1">Description</label>
                                <input type="text" class="form-control" asp-for="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>

                            <div>
                                <label for="exampleInputUsername1">SignImage</label>
                                <input class="form-control" asp-for="SignPhoto">
                                <span class="text-danger" asp-validation-for="SignPhoto"></span>
                            </div>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Edit</button>
                        <a asp-controller="SliderDetail" asp-action="Index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />

    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("header-area")
    </script>

}

